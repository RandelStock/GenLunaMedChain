# ðŸš€ GenLunaMedChain Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
# Set to 'development' or 'production'
NODE_ENV="development"

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Development: Local PostgreSQL or Supabase
# Production: Supabase production database
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================
# Network: localhost, polygon_mumbai, polygon_amoy, sepolia
BLOCKCHAIN_NETWORK="localhost"

# RPC URL (automatically set based on network)
BLOCKCHAIN_RPC_URL="http://127.0.0.1:8545"

# Your wallet private key (NEVER commit this to git!)
# For development: Use Hardhat's default private key
# For production: Use your actual wallet private key
BLOCKCHAIN_PRIVATE_KEY="0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80"

# Contract address (will be set after deployment)
BLOCKCHAIN_CONTRACT_ADDRESS="0x5FbDB2315678afecb367f032d93F642f64180aa3"

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=4000

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"

